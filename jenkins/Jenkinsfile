pipeline {
    agent {
		docker {
			image 'python:3' 
			args '-p 3000:3000'
		}
	}
	stages {
		stage('Checkout') {
			steps {
				echo 'Checking out code'
				checkout scm
			}
		}
	}
    stages {
        stage('Build') { 
            steps {
                sh 'pip install --no-cache-dir -r src/requirements.txt' 
            }
        }
    }
}