pipeline {
	agent any
	stages {
		stage('Checkout') {
			steps {
				echo 'Checking out code'
				checkout scm
			}
		}
        stage('Build') { 
			agent { image 'python:3' }
            steps {
                sh 'pip install --no-cache-dir -r src/requirements.txt' 
            }
        }
		stage('OWASP Dependency-Check'){
			agent { 
				image 'owasp/dependency-check:latest' 
				args '--volume "/opt/jenkins/dependency-check-data:/usr/share/dependency-check/data" --entrypoint='
			}
			steps {
				sh '/usr/share/dependency-check/bin/dependency-check.sh --project 3x03_FMS --scan . --format XML'
			}
		}
    }
	post {
		success {
			dependencyCheckPublisher pattern: 'dependency-check-report.xml'
		}
	}
}