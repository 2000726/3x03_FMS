pipeline {
    agent none
	stages {
		stage('Checkout') {
			steps {
				echo 'Checking out code'
				checkout scm
			}
		}
        stage('Build') { 
            steps {
                sh 'pip install --no-cache-dir -r src/requirements.txt' 
            }
        }
		stage('OWASP Dependency-Check'){
			steps {
				dependencyCheck additionalArguments: '--format HTML --format XML', odcInstallation: '3x03_FMS'
			}
		}
    }
	post {
		success {
			dependencyCheckPublisher pattern: 'dependency-check-report.xml'
		}
	}
}