pipeline {
    agent {
		docker {
			image 'python:3' 
			args '-p 3000:3000'
		}
	}
	stages {
		stage('Checkout') {
			steps {
				echo 'Checking out code'
				checkout scm
			}
		}
        stage('Build') { 
            steps {
                sh 'pip install --no-cache-dir -r src/requirements.txt' 
            }
        }
		stage('OWASP Dependency-Check'){
			steps {
				dependencyCheck additionalArguments: 'scan="src/" --format HTML', odcInstallation: '3x03_FMS'
			}
		}
    }
}